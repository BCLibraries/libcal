{
    "name": "bgsu-lits/libcal",
    "description": "SpringShare LibCal API Client.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "John Kloor",
            "email": "kloor@bgsu.edu"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-date": "*",
        "ext-pcre": "*",
        "netresearch/jsonmapper": "^4.0",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "*",
        "psr/http-factory": "^1.0",
        "psr/http-factory-implementation": "*",
        "psr/http-message": "^1.0",
        "psr/http-message-implementation": "*",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "desarrolla2/cache": "^3.0",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^2.0",
        "neronmoon/scriptsdev": "^0.1.9",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Lits\\LibCal\\": "src"
        },
        "exclude-from-classmap": [
            "/src/Test/"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "neronmoon/scriptsdev": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        },
        "scripts-dev": {
            "phpcbf": "phpcbf ./src --standard=phpcs.xml",
            "phpcs": "phpcs ./src --standard=phpcs.xml",
            "phplint": "phplint ./src --exclude=vendor",
            "phpstan": "phpstan analyse -c phpstan.neon",
            "phpunit": "phpunit -c phpunit.xml",
            "psalm": "psalm --config=psalm.xml",
            "test": [
                "@phplint",
                "@phpcs",
                "@phpstan",
                "@psalm",
                "@phpunit"
            ]
        }
    }
}
